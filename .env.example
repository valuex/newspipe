# Environment variables for Docker Compose
# Copy this file to .env and customize the values

# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_use_a_strong_password_here
POSTGRES_DB=postgres

# Application Port
PORT=5000

# Application Secrets (REQUIRED: Generate strong random values for production!)
# You can generate random values with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=changeme_generate_a_random_secret_key
SECURITY_PASSWORD_SALT=changeme_generate_a_random_salt
